{
  "manifest_version": 2,

  "name": "LIBRA Parser",
  "description": "Starter for the parser extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon_dark.png",
    "default_popup": "popup.html"
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./node_modules/jquery/dist/jquery.min.js","./built/content_script.js"]
    }
  ],

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",


  "permissions": [
    "activeTab"
  ]
}